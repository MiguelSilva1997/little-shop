<h1>Welcome to your cart!</h1>

<% @cart.items.each do |item| %>
  <%= item.title %>
  <%= item.description %>
  <%= item.price %>
	<%= @cart.contents[item.id.to_s] %>
  <%= item.image %>
  <%= link_to "Remove", cart_path(item_id: item.id), method: :delete %>
	<%= render partial: "form", locals: {item: item} %>
<% end %>

