<!DOCTYPE html>
<html>
  <head>
    <title>LittleShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_user %>
    <h4><%= link_to "Logout", logout_path %></h4>
    <% else %>
    <h4><%= link_to "Login", login_path %></h4>
    <% end %>
  <p class="flash"><%= flash.notice %></p>
    <%= yield %>
  </body>
</html>
